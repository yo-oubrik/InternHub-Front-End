generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type CompanySocialLinks {
  linkedin String
  twitter  String
}

model Admin {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  /// Field referred in an index, but found no data to define the type.
  email String @db.String
}

model Application {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model Company {
  id          String             @id @default(auto()) @map("_id") @db.ObjectId
  address     String
  createdAt   DateTime           @db.Date
  description String
  email       String
  ice         String
  industry    String
  logo        String
  name        String
  phone       String
  rc          String
  size        String
  socialLinks CompanySocialLinks
  updatedAt   DateTime           @db.Date
  website     String
}

model Internship {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  companyId   String
  createdAt   DateTime @db.Date
  description String
  duration    BigInt
  industry    String
  location    String
  startDate   DateTime @db.Date
  title       String
  type        String
  updatedAt   DateTime @db.Date
}

model Student {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @db.String
}
